[Unit]
Description=llama-dashboard â€” Local LLM management platform (CPU)
Documentation=https://github.com/BegoniaHe/llama_dashboard
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=-/etc/llama-dashboard/env
ExecStart=/usr/bin/llama-dashboard serve
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/var/lib/llama-dashboard
StateDirectory=llama-dashboard

[Install]
WantedBy=multi-user.target
